<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
    <servlet>
    <servlet-name>FileUtilsTest</servlet-name>
    <servlet-class>com.pu.action.FileUtilsTest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImgUtils</servlet-name>
    <servlet-class>com.pu.action.ImgUpUtils</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>FileImg</servlet-name>
    <servlet-class>com.pu.action.FileImgList</servlet-class>
  </servlet>
  <servlet>
  <!-- 指定DWR核心servelet的名字 -->
  <servlet-name>dwr-invoker</servlet-name>
  <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
  <!-- 指定核心的类 -->
   <init-param>
      <param-name>debug</param-name>
      <param-value>true</param-value>
    </init-param>
  
  </servlet>
   <servlet-mapping>
    <servlet-name>FileUtilsTest</servlet-name>
    <url-pattern>/FileUtilsTest</url-pattern>
      </servlet-mapping>
       <servlet-mapping>
    <servlet-name>FileImg</servlet-name>
    <url-pattern>/FileImg</url-pattern>
      </servlet-mapping>
        <servlet-mapping>
    <servlet-name>ImgUtils</servlet-name>
    <url-pattern>/ImgUtils</url-pattern>
      </servlet-mapping>
      <!-- dwr的servletmap，可以过滤，让action通过dwr的核心类 -->
        <servlet-mapping>
    <servlet-name>dwr-invoker</servlet-name>
    <url-pattern>/leedwr/*</url-pattern>
      </servlet-mapping>	
</web-app>
